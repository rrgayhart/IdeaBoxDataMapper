<form action="/idea/create" method="POST">
  <input type="text" name="title" id="title">
  <input type="text" name="description" id="description">
  <input type="submit" value="Add Idea!"/>
</form>

<h2>Ideas:</h2>
<% unless @ideas.empty? %>
<ul>
<% @ideas.each do |idea| %>
<li <%= "class=\"completed\"" if idea.completed_at %>>
<a href="/idea/<%=idea.id%>"><%= idea.title %></a>
</li>
<% end %>
</ul>
<% else %>
<p>No Ideas!</p>
<% end %>
